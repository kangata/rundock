services:
  redis:
    image: redis:alpine
    restart: always
    volumes:
      - ${PROJECT_PATH}/rundock/data/redis:/data
    logging:
      options:
        max-file: '1'
        max-size: '1m'
    environment:
      - TZ=Asia/Jakarta
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      retries: 3
      timeout: 5s